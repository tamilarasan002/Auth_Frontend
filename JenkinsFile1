pipeline {
    agent any

    environment {
        DOCKER_REGISTRY = "192.168.4.81:5000"
        DOCKER_IMAGE_NAME = "web-app"
        KUBE_CONFIG = credentials('kubeconfig')
        BUILD_NUMBER = "${env.BUILD_ID}" // Using Jenkins' built-in build ID for unique build numbers
        SSH_KEY_ID = 'k8s-ssh' // Your Jenkins SSH key ID
        REMOTE_HOST = '192.168.4.81' // Replace with the actual address of your remote machine
    }

    stages {
        stage('Checkout Source') {
            steps {
                git branch: 'main', url: 'https://github.com/tamilarasan002/Auth_Frontend'
            }
        }

        stage('Build Docker Image') {
            steps {
                sshagent([SSH_KEY_ID]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${REMOTE_HOST} '
                            docker build -t ${DOCKER_REGISTRY}/${DOCKER_IMAGE_NAME}:v${BUILD_NUMBER} ${WORKSPACE}
                        '
                    """
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                sshagent([SSH_KEY_ID]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${REMOTE_HOST} '
                            docker login ${DOCKER_REGISTRY}
                            docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE_NAME}:v${BUILD_NUMBER}
                        '
                    """
                }
            }
        }

        stage('Deploy App to Kubernetes') {
            steps {
                script {
                    sh "sed -i 's/latest/v${BUILD_NUMBER}/g' ${WORKSPACE}/web-app.yaml"
                    sh "kubectl --kubeconfig=${KUBE_CONFIG} apply -f ${WORKSPACE}/web-app.yaml"
                }
            }
        }
    }
}
